{
  "name": "html-to-scss",
  "displayName": "HTML to SCSS",
  "description": "Transform your selected HTML snippet into a stunning SCSS structure with ease. Seamlessly generate clean and organized SCSS code from your HTML code.",
  "repository": "https://github.com/DarioCasciato/vscode-html-to-scss",
  "icon": "icon.png",
  "publisher": "DarioCas",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
  "configuration": {
    "type": "object",
    "title": "HTML to SCSS",
    "properties": {
      "html-to-scss.outputStyle": {
        "type": "string",
        "default": "standard",
        "enum": ["standard", "alman"],
        "enumDescriptions": ["Standard style: .test { }", "Alman style: .test\n{ }"],
        "description": "Select the output style for generated SCSS code."
      }
    }
  },
  "commands": [
    {
      "command": "extension.html-to-scss.generate-scss",
      "title": "Generate SCSS from HTML"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "extension.html-to-scss.generate-scss",
        "when": "editorHasSelection && editorTextFocus"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "htmlparser2": "^9.0.0",
    "vsce": "^2.15.0"
  }
}
